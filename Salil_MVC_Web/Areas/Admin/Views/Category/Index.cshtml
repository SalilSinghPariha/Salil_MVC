@model List<Category>

<div class=" card shadow border-0 mt-4">
<div class="card-header bg-secondary bg-gradient text-light ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h5 class="pt-2 text-white py-2">
                Category List
            </h5>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">

            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display order
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="30%">
                                @item.Name
                            </td>
                            <td width="20%">
                                @item.DisplayOrder
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id"
                                       class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>